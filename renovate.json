{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "python3=(?<currentValue>\\d+\\.\\d+\\.\\d+-0ubuntu1~20\\.04)"
      ],
      "depNameTemplate": "ubuntu:python3",
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "python3-pip=(?<currentValue>\\d+\\.\\d+\\.\\d+-5ubuntu1\\.\\d+)"
      ],
      "depNameTemplate": "ubuntu:python3-pip",
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "python3-venv=(?<currentValue>\\d+\\.\\d+\\.\\d+-0ubuntu1~20\\.04)"
      ],
      "depNameTemplate": "ubuntu:python3-venv",
      "datasourceTemplate": "docker"
    }
  ]
}
