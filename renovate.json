{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchManagers": ["dockerfile"],
      "dependencyDashboard": true
    },
    {
      "matchManagers": ["pip_requirements"],
      "matchPackagePatterns": ["*"],
      "dependencyDashboard": true
    }
  ],
  "docker": {
    "fileMatch": ["Dockerfile"]
  }
}
